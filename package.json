{
  "name": "@showbie/eslint-config",
  "description": "ESLint configuration for Showbie projects",
  "license": "ISC",
  "author": "Showbie (https://www.showbie.com)",
  "maintainers": [
    "Jeff Nelson @stormwarning (https://www.showbie.com)"
  ],
  "homepage": "https://github.com/showbie/showbie-eslint-config",
  "repository": "showbie/showbie-eslint-config",
  "version": "1.1.0",
  "scripts": {
    "changelog": "lerna-changelog",
    "changeset": "changeset add",
    "eslint-check": "eslint --print-config index.js | eslint-config-prettier-check",
    "lint": "eslint '**/*.js'",
    "release": "changeset publish",
    "test": "npm run lint"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "2.34.x",
    "@typescript-eslint/parser": "2.10.x",
    "eslint-plugin-ember": "7.7.x",
    "eslint-plugin-hbs": "0.1.2",
    "eslint-plugin-react": "7.17.x"
  },
  "dependencies": {
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3"
  },
  "peerDependencies": {
    "eslint": ">=5",
    "prettier": ">=1.18"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.2.7",
    "@changesets/cli": "2.10.x",
    "eslint": "6.7.x",
    "husky": "4.2.x",
    "lerna-changelog": "1.0.x",
    "lint-staged": "10.2.x",
    "prettier": "1.19.x"
  },
  "keywords": [
    "eslint-config",
    "prettier style",
    "showbie"
  ],
  "changelog": {
    "repo": "showbie/showbie-eslint-config",
    "labels": {
      "breaking": "💣 Breaking Change",
      "enhancement": "🚀 Enhancement",
      "bug": "🐛 Bug Fix",
      "documentation": "📝 Documentation",
      "internal": "🏠 Internal"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
