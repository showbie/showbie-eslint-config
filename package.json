{
  "name": "@showbie/eslint-config",
  "description": "ESLint configuration for Showbie projects",
  "license": "ISC",
  "author": "Showbie (https://www.showbie.com)",
  "maintainers": [
    "Jeff Nelson @stormwarning (https://www.showbie.com)"
  ],
  "homepage": "https://github.com/showbie/showbie-eslint-config",
  "repository": "showbie/showbie-eslint-config",
  "version": "0.3.4",
  "scripts": {
    "changelog": "lerna-changelog",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "lint": "prettier-eslint '**/*.js' --list-different",
    "test": "npm run lint"
  },
  "optionalDependencies": {
    "eslint-plugin-ember": "^6.7.1"
  },
  "dependencies": {
    "prettier-eslint-cli": "^5.0.0"
  },
  "peerDependencies": {
    "eslint": ">=4"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.0",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.0"
  },
  "keywords": [
    "eslint-config",
    "prettier style",
    "showbie"
  ],
  "changelog": {
    "repo": "showbie/showbie-eslint-config",
    "labels": {
      "breaking": "💣 Breaking Change",
      "enhancement": "🚀 Enhancement",
      "bug": "🐛 Bug Fix",
      "documentation": "📝 Documentation",
      "internal": "🏠 Internal"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
