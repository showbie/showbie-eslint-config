{
  "name": "@showbie/eslint-config-root",
  "description": "ESLint configuration for Showbie projects",
  "license": "ISC",
  "private": true,
  "author": "Showbie (https://www.showbie.com)",
  "maintainers": [
    "Jeff Nelson (https://www.showbie.com)"
  ],
  "homepage": "https://github.com/showbie/showbie-eslint-config",
  "repository": "showbie/showbie-eslint-config",
  "version": "3.0.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "changelog": "lerna-changelog",
    "changeset": "changeset add",
    "lint": "eslint '**/*.js'",
    "release": "changeset publish",
    "test": "npm run lint"
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "0.3.0",
    "@changesets/cli": "2.14.1",
    "eslint": "7.22.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "lerna": "4.0.0",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "prettier-plugin-packagejson": "2.2.10"
  },
  "changelog": {
    "repo": "showbie/showbie-eslint-config",
    "labels": {
      "breaking": "💣 Breaking Change",
      "enhancement": "🚀 Enhancement",
      "bug": "🐛 Bug Fix",
      "documentation": "📝 Documentation",
      "internal": "🏠 Internal"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
