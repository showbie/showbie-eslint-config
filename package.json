{
  "name": "@showbie/eslint-config",
  "description": "ESLint configuration for Showbie projects",
  "license": "ISC",
  "author": "Showbie (https://www.showbie.com)",
  "maintainers": [
    "Jeff Nelson @stormwarning (https://www.showbie.com)"
  ],
  "homepage": "https://github.com/showbie/showbie-eslint-config",
  "repository": "showbie/showbie-eslint-config",
  "version": "0.4.1",
  "scripts": {
    "changelog": "lerna-changelog",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "lint": "prettier-eslint '**/*.js' --list-different",
    "test": "npm run lint"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "2.0.x",
    "@typescript-eslint/parser": "2.0.x",
    "eslint-plugin-ember": "6.10.x",
    "eslint-plugin-prettier": "3.1.x",
    "eslint-plugin-react": "7.14.x"
  },
  "dependencies": {
    "prettier-eslint-cli": "5.0.0"
  },
  "peerDependencies": {
    "eslint": ">=5"
  },
  "devDependencies": {
    "eslint": "6.2.x",
    "eslint-config-prettier": "6.1.x",
    "husky": "3.0.x",
    "lerna-changelog": "0.8.x",
    "lint-staged": "9.4.x"
  },
  "keywords": [
    "eslint-config",
    "prettier style",
    "showbie"
  ],
  "changelog": {
    "repo": "showbie/showbie-eslint-config",
    "labels": {
      "breaking": "💣 Breaking Change",
      "enhancement": "🚀 Enhancement",
      "bug": "🐛 Bug Fix",
      "documentation": "📝 Documentation",
      "internal": "🏠 Internal"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
